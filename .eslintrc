{
    "extends": "airbnb-base",
    "plugins": [
        "mocha"
    ],
//    "parserOptions": {
//        "ecmaVersion": 2015,
//        "sourceType": "module"
//    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-plusplus": "warn",
        "max-len": "off",
        "no-underscore-dangle": "off",
        "prefer-arrow-callback": "error",
        "comma-dangle": "off",
        "no-await-in-loop": "off",
        "array-callback-return": "off",
        "mocha/no-exclusive-tests": "error"
    }
}
